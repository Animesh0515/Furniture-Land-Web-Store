@model Furniture_Land_Web_store.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html  >
<head >
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="~/Scripts/js/angular.min.js"></script>
    <script src="~/Scripts/js/Login.js"></script>
    <style>
        .card {
            margin: 0 auto; /* Added */
            float: none; /* Added */
            margin-bottom: 10px; /* Added */
            margin-top: 100px;
        }
    </style>
</head>
<body  >
    <div>
        <div ng-controller="logincontroller">
            <form name="myForm" novalidate>
                <div style="padding-bottom:50px;">
                    <div class="card" style="width: 30rem;">
                        <div class="card-header" style="text-align:center">
                            Login
                        </div>
                        <div class="container" style="padding-bottom: 40px;">
                            <label>Username</label>
                            <input type="text" class="form-control" required placeholder="Username" ng-model="username">
                            <label style="padding-top:20px;">Password</label>
                            <input type="password" class="form-control" required placeholder="Password" ng-model="password">
                        </div>
                        <button type="button" class="btn btn-primary" ng-click="login()" style="float:right;">Login</button>

                    </div>
                </div>
                </form>
        </div>
    </div>

    
</body>
</html>


