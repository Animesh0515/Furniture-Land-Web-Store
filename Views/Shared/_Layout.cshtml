                        <div class="container-fluid">
                            @Html.ActionLink("Furniture Land", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                            <form class="d-flex" style="padding-left: 250px; ">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" style="height: 33px; width: 360px;">
                                <button class="btn btn-outline-success" type="submit" style="height: 33px;">Search</button>
                            </form>
                            <div class="wrapper" style=" padding-left: 200px;" ng-click="redirect()">
                                <i class="fa" style="font-size: 22px; color: rgb(255 106 0);">&#xf07a;</i>
                                <span class='badge badge-warning' id='lblCartCount'>{{cartQuantity}}</span>

                            </div>
                            <a class="nav-link" style="color: rgba(0,0,0,.55)" ng-click="LoginAction()">{{loginstatus}}</a>
</div>
                    </nav>
                </div>
